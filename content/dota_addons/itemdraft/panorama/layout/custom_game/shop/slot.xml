<!--
  A slot view for management.
-->
<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/shop/shop.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/utility.js" />
    <include src="file://{resources}/scripts/custom_game/shop/slot.js" />
  </scripts>
  <Panel class="slot">
    <Button onactivate="upgrade()">
      <DOTAAbilityImage class="icon" />
      <Label class="slot-type" />
      <Label class="cost" onmouseover="DOTAShowTextTooltip(#upgrade)" onmouseout="DOTAHideTextTooltip()" />
      <Label class="value" onmouseover="DOTAShowTextTooltip(#sell)" onmouseout="DOTAHideTextTooltip()" />
    </Button>
  </Panel>
</root>
