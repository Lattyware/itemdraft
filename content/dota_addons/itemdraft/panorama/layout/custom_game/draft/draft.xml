<!--
	The drafting screen for items.
-->
<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/draft/draft.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/utility.js" />
    <include src="file://{resources}/scripts/custom_game/draft/draft.js" />
  </scripts>
  <Panel class="fullscreen">
    <Panel id="draft" class="fullscreen background">
      <Panel id="draft-info-panel">
        <Label id="name" text="#addonname" />
        <Panel id="draft-timer-panel">
          <Label id="draft-timer-description" text="#draftstartdescription" />
          <Label id="draft-timer" text="#timer" />
        </Panel>
        <Label id="draft-description" html="true" text="#draftdescription" />
        <Panel id="draft-order-panel" class="hidden">
          <Label id="currently-drafting" text="#currentlydrafting" />
          <Panel id="draft-order" />
        </Panel>
      </Panel>
      <Panel id="teams" />
    </Panel>
  </Panel>
</root>
